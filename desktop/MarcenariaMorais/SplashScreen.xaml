<Window x:Class="MarcenariaMorais.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarcenariaMorais"
        mc:Ignorable="d"
        Title="SplashScreen" Height="400" Width="600"
        Background="{StaticResource PretoAlternativo}"
        ContentRendered="Window_ContentRendered"
        ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="{DynamicResource PadraoFundoBranco}" 
                TileMode="Tile"
                Viewport="0,0,2160,2160" 
                ViewportUnits="Absolute"
                Stretch="None"
                Opacity="0.075">
                <ImageBrush.RelativeTransform>
                    <ScaleTransform ScaleX="0.10" ScaleY="0.10"/>
                </ImageBrush.RelativeTransform>
            </ImageBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Image x:Name="img_logo" 
               Grid.Row="0" 
               Source="{StaticResource LogoCircularBranca}"
               VerticalAlignment="Bottom"
               Height="200"
               Width="200" 
               Margin="0 0 0 10"
               RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <ProgressBar x:Name="pbr_progress" 
                     Grid.Row="1"
                     Height="10"
                     Margin="0 10 0 0"
                     VerticalAlignment="Top"
                     Background="{StaticResource PrimariaAlternativa}"
                     Foreground="{StaticResource Branco}"
                     Value="0"/>
    </Grid>
</Window>
