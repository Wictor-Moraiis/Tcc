<UserControl x:Class="MarcenariaMorais.TextBoxMask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarcenariaMorais"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    
    <Grid VerticalAlignment="Center"
          HorizontalAlignment="Center">

        <TextBox x:Name="tbx_texto"
                 Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 AcceptsReturn="False"
                 AcceptsTab="False"
                 PreviewKeyDown="tbx_texto_PreviewKeyDown"
                 PreviewTextInput="tbx_texto_PreviewTextInput"
                 CommandManager.PreviewCanExecute="tbx_texto_PreviewCanExecute"/>
    </Grid>
</UserControl>
