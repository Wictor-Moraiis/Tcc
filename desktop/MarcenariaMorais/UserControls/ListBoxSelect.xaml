<UserControl x:Class="MarcenariaMorais.ListBoxSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarcenariaMorais"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded"
             Focusable="True">

    <Grid HorizontalAlignment="Center" 
          VerticalAlignment="Center">

        <Button x:Name="btn_lista"
                Click="btn_lista_Click">

            <Grid>
                <TextBlock x:Name="tb"
                           Width="{Binding ActualWidth, ElementName=btn_lista}"
                           Text="{Binding ItemPlaceholder, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           HorizontalAlignment="Left"
                           Padding="2 0 15 0"
                           Opacity="0.5"/>

                <Image x:Name="im"
                       Source="{DynamicResource IExpandir}" 
                       Width="20"
                       HorizontalAlignment="Right"
                       Margin="0 0 1 0"/>
            </Grid>
        </Button>

        <Popup x:Name="po" 
               PlacementTarget="{Binding ElementName=btn_lista}"
               Placement="Bottom" 
               HorizontalOffset="0"
               Width="{Binding ActualWidth, ElementName=btn_lista}"
               MaxHeight="100"
               ScrollViewer.VerticalScrollBarVisibility="Auto"
               ScrollViewer.CanContentScroll="True"
               StaysOpen="False"
               IsOpen="False" 
               AllowsTransparency="True">

            <ListBox x:Name="lb" 
                     Width="{Binding ActualWidth, ElementName=btn_list}"
                     SelectionChanged="lb_SelectionChanged">
                <ListBoxItem/>
            </ListBox>
        </Popup>
    </Grid>
</UserControl>
