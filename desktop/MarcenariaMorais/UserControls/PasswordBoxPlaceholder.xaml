<UserControl x:Class="MarcenariaMorais.PasswordBoxPlaceholder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarcenariaMorais"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <PasswordBox
            x:Name="pb"
            Padding="2 0 0 0"
            PasswordChanged="PasswordBox_PasswordChanged"
            GotFocus="PasswordBox_GotFocus"
            LostFocus="PasswordBox_LostFocus"
        />
        
        <TextBlock 
            x:Name="tb_placeholder"
            Text="{Binding PasswordPlaceholder, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Margin="5 1 0 0"
            Opacity="0.5"
            IsHitTestVisible="False"
        />
    </Grid>
</UserControl>
