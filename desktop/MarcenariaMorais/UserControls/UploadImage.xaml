<UserControl x:Class="MarcenariaMorais.UploadImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarcenariaMorais"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    
    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">

        <Border Name="mascara">

            <StackPanel x:Name="sp_conteudo"
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Orientation="Horizontal">

                <Button x:Name="btn_upload"
                        Content="Escolha uma imagem"
                        Margin="5 5 5 5" 
                        Padding="2"
                        Click="btn_upload_Click"/>

                <TextBlock x:Name="tbk_texto"
                           VerticalAlignment="Center"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
