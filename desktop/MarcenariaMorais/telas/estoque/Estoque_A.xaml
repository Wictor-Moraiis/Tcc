<Page x:Class="MarcenariaMorais.Estoque_A"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarcenariaMorais"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1366"
      Title="Estoque_A"
      Loaded="Page_Loaded">

    <Grid>
        <DockPanel LastChildFill="True" 
               HorizontalAlignment="Stretch">

            <StackPanel Orientation="Vertical" 
                    Style="{DynamicResource Form}">

                <Label x:Name="l_titulo" Content="Adicionar Item no Estoque"/>

                <Grid>
                    <Border
                    Name="Mascara"
                    Background="{DynamicResource Secundaria}"
                    CornerRadius="12"
                />

                    <UniformGrid Columns="2">

                        <UniformGrid.OpacityMask>
                            <VisualBrush Visual="{ Binding ElementName=Mascara}"/>
                        </UniformGrid.OpacityMask>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Nome do Item:"/>
                            <local:TextBoxPlaceholder x:Name="inp_produto" 
                                                      TextPlaceholder="Digite o nome do item" 
                                                      Style="{DynamicResource FormTexto}"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Quantidade:"/>
                            <local:NumericUpDown x:Name="inp_quant" Style="{DynamicResource InputNumero}" DefaultValue="0" MaxValue="9999"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Telefone do Fornecedor:"/>
                            <local:TextBoxMask x:Name="inp_tel" Style="{DynamicResource TextoMascara}"
                                            Mask="(__) _____-____"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Imagem:"/>
                            <local:UploadImage x:Name="inp_img" 
                                               Style="{DynamicResource UploadImage}"/>
                        </StackPanel>

                    </UniformGrid>

                </Grid>

                <DockPanel>

                    <Button x:Name="btn_cancelar" 
                            Style="{DynamicResource BotaoPrincipal}" 
                            Click="btn_cancelar_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="{DynamicResource IRemover}"/>
                            <TextBlock VerticalAlignment="Center">Cancelar</TextBlock>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btn_salvar"
                            Style="{DynamicResource BotaoPrincipal}"
                            Click="btn_salvar_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock VerticalAlignment="Center">Confirmar</TextBlock>
                            <Image Source="{DynamicResource IAdicionar}"/>
                        </StackPanel>
                    </Button>
                </DockPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
