<Page x:Class="MarcenariaMorais.Pedido_E"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarcenariaMorais"
      mc:Ignorable="d"
      d:DesignHeight="728" d:DesignWidth="1366"
      Title="Pedido_E">

    <Grid>
        <DockPanel LastChildFill="True" 
       HorizontalAlignment="Stretch">

            <StackPanel Orientation="Vertical" 
            Style="{DynamicResource Form}">

                <Label x:Name="l_titulo" Content="Alterar Pedido"/>

                <Grid>
                    <Border Name="Mascara"
                    Background="{DynamicResource Secundaria}"
                    CornerRadius="12"/>

                    <UniformGrid Columns="2">

                        <UniformGrid.OpacityMask>
                            <VisualBrush Visual="{ Binding ElementName=Mascara}"/>
                        </UniformGrid.OpacityMask>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Cliente:"/>
                            <local:ListBoxSelect x:Name="inp_cli"
                                             ItemPlaceholder="Selecione o cliente"
                                             Style="{DynamicResource Opcoes}"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Descrição:"/>
                            <local:TextBoxPlaceholder x:Name="inp_desc" 
                                                  TextPlaceholder="Digite a descrição do cliente" 
                                                  Style="{DynamicResource FormTextoLongo}"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Valor:"/>
                            <local:TextBoxPlaceholder x:Name="inp_valor" 
                                                     Style="{DynamicResource FormTexto}"
                                                     TextPlaceholder="Digite o valor usando . ou ,"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Data de Realização:"/>
                            <DatePicker x:Name="inp_data_realizado" Style="{DynamicResource Calendario}" Template="{DynamicResource CustomDatePicker}"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Data de Entrega:"/>
                            <DatePicker x:Name="inp_data_entrega" Style="{DynamicResource Calendario}" Template="{DynamicResource CustomDatePicker}"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="10 0 0 0">
                            <Label Content="Itens do Estoque:"/>

                            <UniformGrid Columns="3" Margin="0 0 10 0">

                                <local:ListBoxSelect x:Name="inp_estq1"
                                                 ItemPlaceholder="Selecione um item"
                                                 Style="{DynamicResource Opcoes}"/>
                                <local:ListBoxSelect x:Name="inp_estq2"
                                                 ItemPlaceholder="Selecione um item"
                                                 Style="{DynamicResource Opcoes}"/>
                                <local:ListBoxSelect x:Name="inp_estq3"
                                                 ItemPlaceholder="Selecione um item"
                                                 Style="{DynamicResource Opcoes}"/>
                                <local:ListBoxSelect x:Name="inp_estq4"
                                                 ItemPlaceholder="Selecione um item"
                                                 Style="{DynamicResource Opcoes}"/>
                                <local:ListBoxSelect x:Name="inp_estq5"
                                                 ItemPlaceholder="Selecione um item"
                                                 Style="{DynamicResource Opcoes}"/>
                            </UniformGrid>

                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <Label Content="Pedido Executado:"/>
                            <local:ListBoxSelect x:Name="inp_executado"
                                             ItemPlaceholder="Selecione uma opção"
                                             Style="{DynamicResource Opcoes}"/>
                        </StackPanel>

                    </UniformGrid>

                </Grid>

                <DockPanel>

                    <Button x:Name="btn_cancelar" 
                    Style="{DynamicResource BotaoPrincipal}"
                    Click="btn_cancelar_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="{DynamicResource IRemover}"/>
                            <TextBlock VerticalAlignment="Center">Cancelar</TextBlock>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btn_salvar" 
                    Style="{DynamicResource BotaoPrincipal}"
                    Click="btn_salvar_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock VerticalAlignment="Center">Confirmar</TextBlock>
                            <Image Source="{DynamicResource IAdicionar}"/>
                        </StackPanel>
                    </Button>
                </DockPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
