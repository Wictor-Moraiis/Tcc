<Page x:Class="MarcenariaMorais.HomeAjuda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarcenariaMorais"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1366"
      Title="HomeAjuda">

    <Page.Resources>
        <Style x:Key="Home" TargetType="StackPanel">
            <Setter Property="Width" Value="auto"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Orientation" Value="Vertical"/>
            <Style.Resources>
                <Style TargetType="Label">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="48"/>
                    <Setter Property="Margin" Value="0 0 0 25"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="32"/>
                    <Setter Property="Margin" Value="0 0 0 25"/>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="300"/>
                    <Setter Property="Height" Value="90"/>
                    <Setter Property="Background" Value="{StaticResource Primaria}"/>
                    <Setter Property="Foreground" Value="{StaticResource Branco}"/>
                    <Setter Property="FontSize" Value="30"/>
                    <Setter Property="Content" Value="Precisa de ajuda?"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Style.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="45"/>
                        </Style>
                    </Style.Resources>
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel Style="{DynamicResource Home}">
            <Label Content="Bem Vindo!" Foreground="White"/>
            <Button Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
