<Page x:Class="MarcenariaMorais.Funcionario_L"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarcenariaMorais"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1366"
      Title="Funcionario_L"
      Loaded="Page_Loaded">

    <Page.Resources>
        <local:StringToLong x:Key="StringToLong"/>
        <local:CpfFormatter x:Key="CpfFormatter"/>
    </Page.Resources>

    <Grid>
        <DockPanel LastChildFill="True" HorizontalAlignment="Stretch">
            <StackPanel Style="{DynamicResource Listar}">

                <Label x:Name="l_titulo" Content="Funcionários"/>

                <Grid Style="{StaticResource BarraPesquisa}">
                    <Border Name="Mascara"
                        Background="White"
                        CornerRadius="15"/>

                    <DockPanel x:Name="dp_BarraPesquisa">

                        <DockPanel.OpacityMask>
                            <VisualBrush Visual="{Binding ElementName=Mascara}"/>
                        </DockPanel.OpacityMask>

                        <StackPanel>
                            <Button x:Name="btn_Pesquisar">
                                <Image Source="{StaticResource IPesquisa}" Stretch="UniformToFill"/>
                            </Button>
                        </StackPanel>

                        <local:TextBoxPlaceholder x:Name="tb_pesquisa"
                            TextPlaceholder="Pesquisar pelo CPF ou nome"/>
                    </DockPanel>
                </Grid>

                <TabControl x:Name="tc_tabelas" Style="{StaticResource TabsFunc}" SelectionChanged="tc_tabelas_SelectionChanged">
                    <TabItem x:Name="ti_funcionarios" Header="Funcionários" IsSelected="True"/>
                    <TabItem x:Name="ti_categorias" Header="Categorias"/>
                </TabControl>

                <DataGrid x:Name="dt_tabela"
                          Margin="0"
                          CellStyle="{StaticResource ListarCell}"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Focusable="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="CPF" Binding="{Binding Func_cpf, Converter={StaticResource CpfFormatter}, Mode=OneWay}"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Func_nome}"/>
                        <DataGridTextColumn Header="1º Telefone" Binding="{Binding Func_tel1, Converter={StaticResource StringToLong}, Mode=TwoWay, StringFormat={}{0:(##) #####-####}}"/>
                        <DataGridTextColumn Header="2º Telefone" Binding="{Binding Func_tel2, Converter={StaticResource StringToLong}, Mode=TwoWay, StringFormat={}{0:(##) #####-####}}"/>
                        <DataGridTextColumn Header="Descrição" Binding="{Binding Func_desc}" ElementStyle="{StaticResource WrapText}"/>
                        <DataGridTextColumn Header="Categoria" Binding="{Binding Catg_nome}"/>
                        <DataGridTextColumn Header="Salário" Binding="{Binding Catg_sal, StringFormat=C, ConverterCulture='pt-BR'}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DockPanel>

                    <Button x:Name="btn_excluir"
                            Style="{DynamicResource BotaoPrincipal}"
                            Click="btn_excluir_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="{DynamicResource IRemover}"/>
                            <TextBlock VerticalAlignment="Center">Excluir</TextBlock>
                        </StackPanel>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                        <Button x:Name="btn_alterar" 
                                Style="{DynamicResource BotaoPrincipal}" 
                                Click="btn_alterar_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock VerticalAlignment="Center">Alterar</TextBlock>
                                <Image Source="{DynamicResource IEditar}"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btn_adicionar" 
                                Style="{DynamicResource BotaoPrincipal}" 
                                Margin="15 10 0 0"
                                Click="btn_adicionar_Click">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock VerticalAlignment="Center">Adicionar</TextBlock>
                                <Image Source="{DynamicResource IAdicionar}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                </DockPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
